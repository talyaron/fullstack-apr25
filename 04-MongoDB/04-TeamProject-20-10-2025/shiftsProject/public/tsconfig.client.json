{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "bundler",
    "outDir": "./public/dist",
    "rootDir": "./public",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true
  },
  "include": ["public/*.ts"],
  "exclude": ["node_modules", "public/dist", "src", "dist"]
}